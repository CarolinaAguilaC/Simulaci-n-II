        "def media():\n",
        "  suma=0\n",
        "  print('¿Cuántos números quiere ingresar?')\n",
        "  num=int(input())\n",
        "  n=[]\n",
        "  for i in range (num):\n",
        "    print('Ingrese el número', i+1, ': ')\n",
        "    n.append(float(input()))\n",
        "\n",
        "  for i in range (num):\n",
        "    suma+=n[i]\n",
        "\n",
        "  prom=suma/num\n",
        "  print('\\n')\n",
        "  print('Elija el nivel de confianza: ')\n",
        "  print('1: 90%')\n",
        "  print('2: 91%')\n",
        "  print('3: 92%')\n",
        "  print('4: 93%')\n",
        "  print('5: 94%')\n",
        "  print('6: 95%')\n",
        "  print('7: 96%')\n",
        "  print('8: 97%')\n",
        "  print('9: 98%')\n",
        "  print('10: 99%')\n",
        "  c=int(input())\n",
        "  print('\\n')\n",
        "  lsp=0.5+z[c-1]*(1/(12*math.sqrt(num)))\n",
        "  lip=0.5-z[c-1]*(1/(12*math.sqrt(num)))\n",
        "\n",
        "  print('El límite inferior es:', lip)\n",
        "  print('El promedio es:', prom)\n",
        "  print('El límite superior es:', lsp)\n",
        "  print('\\n')\n",
        "  if lip<prom and prom<lsp:\n",
        "   print('Los', num, 'numeros tienen una media estadísticamente igual a 1/2, esto con un nivel de confianza del', z1[c-1], '%')\n",
        "  else:\n",
        "   print('Los', num, 'numeros no tienen una media estadísticamente igual a 1/2, esto con un nivel de confianza del', z1[c-1], '%')"
